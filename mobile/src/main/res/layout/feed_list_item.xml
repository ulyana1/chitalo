<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="@dimen/list_items_side_padding"
    android:paddingRight="@dimen/list_items_side_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feed Title"
        android:id="@+id/feedListItemTitleTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/removeImageView"
        android:layout_toStartOf="@+id/removeImageView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://www.googlerss.com"
        android:id="@+id/feedListItemUrlTextView"
        android:layout_below="@+id/feedListItemTitleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginTop="6dp"
        android:textColor="#888888"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/removeImageView"
        android:layout_toStartOf="@+id/removeImageView" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/removeImageView"
        android:src="@drawable/ic_action_remove"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/list_item_divider" />
</RelativeLayout>